# AWS Configuration for Enhanced Bedrock Chat Application
# Copy this file to .env and update with your actual values

# AWS Credentials (choose one method)

# Method 1: Direct credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# Method 2: AWS Profile (alternative to direct credentials)
# AWS_PROFILE=your_aws_profile_name

# Optional: Custom Bedrock endpoint (for testing or VPC endpoints)
# BEDROCK_ENDPOINT=https://bedrock-runtime.us-east-1.amazonaws.com

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# Enhanced Bedrock Model Configuration
DEFAULT_LLM_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
DEFAULT_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0

# Enhanced Features Configuration (defaults for chat app)
DEFAULT_RPM_LIMIT=1000
DEFAULT_TPM_LIMIT=100000
DEFAULT_MAX_RETRIES=10

# Chat Application Settings
CHAT_HISTORY_LIMIT=100
ENABLE_METRICS_EXPORT=true
ENABLE_DEBUG_MODE=false

# Logging Level
LOG_LEVEL=INFO